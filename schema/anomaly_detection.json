{
    "nodes": {
      "Observation": {
        "properties": {
          "id": {"type": "string", "required": true},
          "timestamp": {"type": "datetime", "required": true},
          "value": {"type": "float", "required": true},
          "type": {"type": "string", "enum": ["sensor", "log", "metric"], "required": true}
        }
      },
      "Anomaly": {
        "properties": {
          "id": {"type": "string", "required": true},
          "timestamp": {"type": "datetime", "required": true},
