        "to": "Anomaly",
        "constraints": {}
      },
      "MATCHES_PATTERN": {
        "from": "Observation",
        "to": "Pattern",
        "constraints": {
          "confidence": {"type": "float", "required": true, "min": 0.0, "max": 1.0}
        }
      },
      "ASSOCIATED_WITH": {
        "from": "Anomaly",
        "to": "Pattern",
        "constraints": {}
      }
    }
