          "description": {"type": "string", "required": false}
        }
      },
      "Threshold": {
        "properties": {
          "id": {"type": "string", "required": true},
          "value": {"type": "float", "required": true},
          "metric": {"type": "string", "required": true},
          "direction": {"type": "string", "enum": ["above", "below"], "required": true}
        }
      },
      "Pattern": {
        "properties": {
          "id": {"type": "string", "required": true},
