{
    "validation_rules": {
      "nodes": {
        "Observation": {
          "id": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "timestamp": {
            "type": "datetime",
            "required": true
          },
          "value": {
            "type": "float",
            "required": true
          },
          "type": {
            "type": "string",
            "enum": ["sensor", "log", "metric"],
            "required": true
          }
        },
        "Anomaly": {
          "id": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "timestamp": {
            "type": "datetime",
            "required": true
          },
          "severity": {
            "type": "float",
            "required": true,
            "min": 0.0,
            "max": 1.0
          },
          "description": {
            "type": "string",
            "required": false
          }
        },
        "Threshold": {
          "id": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "value": {
            "type": "float",
            "required": true
          },
          "metric": {
            "type": "string",
            "required": true
          },
          "direction": {
            "type": "string",
            "enum": ["above", "below"],
            "required": true
          }
        },
        "Pattern": {
          "id": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "description": {
            "type": "string",
            "required": true
          },
          "type": {
            "type": "string",
            "enum": ["temporal", "correlation"],
            "required": true
          }
        }
      },
      "edges": {
        "GENERATES": {
          "from": "Observation",
          "to": "Anomaly",
          "probability": {
            "type": "float",
            "required": true,
            "min": 0.0,
            "max": 1.0
          }
        },
        "TRIGGERS": {
          "from": "Threshold",
          "to": "Anomaly"
        },
        "MATCHES_PATTERN": {
          "from": "Observation",
          "to": "Pattern",
          "confidence": {
            "type": "float",
            "required": true,
            "min": 0.0,
            "max": 1.0
          }
        },
        "ASSOCIATED_WITH": {
          "from": "Anomaly",
          "to": "Pattern"
        }
      }
    }
  }